@page
@model NDPE.RazorPagesPageModel.Pages.Todos.UpdateModel
@{
    ViewData["Title"] = "Update Todo";
}

<form method="post" class="col-6">
    <input type="hidden" asp-for="todo.Id" />

    <div>
        <label>Name</label>
        <input asp-for="todo.Name" class="form-control" />
        <span asp-validation-for="todo.Name"></span>
    </div>

    <br />
    <br />

    <div>
        <label>Is Completed</label>
        <input asp-for="todo.IsComplete" type="checkbox">
        <span asp-validation-for="todo.IsComplete"></span>
    </div>

    <div style="text-align: right;">
        <input type="submit" class="btn btn-warning" value="Update" />
    </div>

</form>